.comments {
  box-sizing: border-box;
}

.comments_container {
  position: relative;
  transition: all;
  -webkit-mask-image: linear-gradient(
    to bottom,
    rgba(255, 255, 255, 0) 0,
    rgba(255, 255, 255, 0.6) 15%,
    rgba(255, 255, 255, 1) 100%
  );
}
.comments_mask {
  position: absolute;
  width: 100%;
  height: 30vh;
  top: 0;
  z-index: 2;
}
.bottom_container {
  margin-top: 32rpx;
}

.commets_scroll {
  height: 30vh;
  overflow: scroll;
}

.comments_list {
  padding-top: 30vh;
}

.comments_item_container {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #ffffff;
  transition: all;
}

.comments_item {
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 20px;
  background: rgba(0, 0, 0, 0.36);
  line-height: 40rpx;
  word-break: break-all;
}

.comments_name {
  font-weight: 500;
  color: #7bc6ff;
}

.like_container {
  width: 60rpx;
  position: relative;
  color: #fff;
}

.nums {
  position: absolute;
  bottom: -35rpx;
  width: 100%;
  left: 0;
  text-align: center;
}
